{
  "Version": "2012-10-17",
  "Statement": [{
    "Effect": "Allow",
    "Principal": { "Federated": "${PROVIDER_ARN}" },
    "Action": "sts:AssumeRoleWithWebIdentity",
    "Condition": {
      "StringEquals": {
        "${OIDC}:sub":   "system:serviceaccount:kube-system:${CSI_SA}",
        "${OIDC}:aud":   "sts.amazonaws.com"
      }
    }
  }]
}

